{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "",
  "type": "object",
  "properties": {
    "active": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "retired",
        "new"
      ]
    },
    "environment": {
      "type": "string",
      "minLength": 1
    },
    "hostkey": {
      "type": "string",
      "minLength": 1,
      "pattern": "^((?!localhost).)*$"
    },
    "location": {
      "type": "string",
      "minLength": 1
    },
    "group": {
      "minLength": 0,
      "maxLength": 28
    },
    "name": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "environment",
    "group",
    "hostkey",
    "location",
    "name"
  ]
}
