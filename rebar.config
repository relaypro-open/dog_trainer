{hank, [{ignore, ["template_setup/**"]}]}.

{erlfmt, [write]}.

{plugins,
    [
        {rebar3_run, "v0.5.0"},
        {rebar3_hex, "v6.11.5"},
        erlfmt
    ]}.

{sync, [
		{growl, all},
		{log, all},
		{non_descendants, fix},
		{executable, auto},
		{whitelisted_modules, []},
		{excluded_modules, []}
	]}.
