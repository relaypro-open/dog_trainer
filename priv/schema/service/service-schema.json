{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "number"
    },
    "services": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "required": [
          "protocol",
          "ports"
        ],
        "properties": {
          "protocol": {
            "oneOf":
            [
              { "type": "string",
                "enum": ["tcp","udp","icmp","udplite","esp","ah","sctp"]
              },
              {
                "type": "string",
                "pattern": "^[0-9]*$"
              }
            ]

          },
          "ports": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "[0-9:]*"
            }
          }
        }
      }
    }
  },
  "required": [
    "name",
    "version",
    "services"
    ]
}
